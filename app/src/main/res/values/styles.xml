<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserrat_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--WIDGET-->
    <!--BUTTON-->
    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/bg_round</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_semi_large</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>

    </style>
    <style name="DarkButton" parent="Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="LightButton" parent="Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:textColor">@color/med_grey</item>
    </style>

    <!--TEXTVIEW-->
    <style name="EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_round</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/margin_large</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

    <style name="h1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_semi_large</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="h2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <style name="h3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="h4" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



</resources>
